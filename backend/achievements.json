{
  "achievements": {
    "first_submission": {
      "name": "First Steps",
      "description": "Submit your first assignment to FitchFork",
      "is_positive": true,
      "levels": 1,
      "condition": {
        "type": "submission_count",
        "threshold": 1
      }
    },
    "early_bird": {
      "name": "Early Bird",
      "description": "Submit assignments before the deadline",
      "is_positive": true,
      "levels": 3,
      "condition": {
        "type": "early_submission",
        "thresholds": [1, 5, 10]
      }
    },
    "perfect_score": {
      "name": "Perfect Score",
      "description": "Achieve 100% on assignments",
      "is_positive": true,
      "levels": 5,
      "condition": {
        "type": "perfect_score",
        "thresholds": [1, 3, 5, 10, 20]
      }
    },
    "consistent_performer": {
      "name": "Consistent Performer",
      "description": "Maintain high performance across multiple assignments",
      "is_positive": true,
      "levels": 3,
      "condition": {
        "type": "average_score",
        "thresholds": [80, 85, 90],
        "minimum_assignments": 5
      }
    },
    "code_quality_master": {
      "name": "Code Quality Master",
      "description": "Write clean, well-structured code",
      "is_positive": true,
      "levels": 4,
      "condition": {
        "type": "code_quality_score",
        "thresholds": [80, 85, 90, 95]
      }
    },
    "helping_hand": {
      "name": "Helping Hand",
      "description": "Provide helpful answers in discussion forums",
      "is_positive": true,
      "levels": 3,
      "condition": {
        "type": "helpful_answers",
        "thresholds": [5, 15, 30]
      }
    },
    "streak_breaker": {
      "name": "Streak Breaker",
      "description": "Submit assignments consistently for multiple weeks",
      "is_positive": true,
      "levels": 4,
      "condition": {
        "type": "submission_streak",
        "thresholds": [3, 5, 7, 10]
      }
    },
    "late_submission": {
      "name": "Procrastinator",
      "description": "Submit assignments after the deadline",
      "is_positive": false,
      "levels": 3,
      "condition": {
        "type": "late_submission",
        "thresholds": [1, 3, 5]
      }
    },
    "low_score": {
      "name": "Needs Improvement",
      "description": "Receive low scores on assignments",
      "is_positive": false,
      "levels": 3,
      "condition": {
        "type": "low_score",
        "thresholds": [1, 3, 5],
        "score_threshold": 50
      }
    },
    "plagiarism_detected": {
      "name": "Academic Integrity Violation",
      "description": "Have plagiarism detected in submissions",
      "is_positive": false,
      "levels": 3,
      "condition": {
        "type": "plagiarism_detected",
        "thresholds": [1, 2, 3]
      }
    },
    "missed_deadline": {
      "name": "Deadline Missed",
      "description": "Fail to submit assignments by the deadline",
      "is_positive": false,
      "levels": 3,
      "condition": {
        "type": "missed_deadline",
        "thresholds": [1, 3, 5]
      }
    }
  }
}